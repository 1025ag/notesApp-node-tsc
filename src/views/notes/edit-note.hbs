<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center">Edit Note</h1>
            </div>
            <div class="card-body">
                <form action="/notes/edit/{{note._id}}?_method=PUT " method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="title" value="{{note.title}}">
                    </div>
                    <div class="form-group">
                        <textarea type="text" class="form-control" name="description">{{note.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info btn-block">Update!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>