<div class="row">
    <div class="col-md-4 mx-auto">
        {{#if data}}
        {{#each data}}
        <div class="card">
            <div class="card-header">
                <h2>Account Register</h2>
            </div>
            <div class="card-body">
                <form class="needs-validation" action="/user/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" required name="name" placeholder="Name"
                            value="{{this.name}}">
                        <div class="valid-tooltip">Validado!</div>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{this.email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password"
                            value="{{this.password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password"
                            placeholder="Confirm Password" value="{{this.confirm_password}}">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-block btn-success" type="submit">Sing up</button>
                    </div>
                </form>
            </div>
            {{/each}}
            {{else}}
            <div class="card">
                <div class="card-header">
                    <h2>Account Register</h2>
                </div>
                <div class="card-body">
                    <form class="needs-validation" action="/user/signup" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" required name="name" placeholder="Name"
                                >
                            <div class="valid-tooltip">Validado!</div>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Password"
                                >
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="confirm_password"
                                placeholder="Confirm Password" >
                        </div>
                        <div class="form-group">
                            <button class="btn btn-block btn-success" type="submit">Sing up</button>
                        </div>
                    </form>
                </div>
                {{/if}}
            </div>
        </div>
    </div>